---
import "@fontsource-variable/onest"

import Footer from "../components/Footer.astro"
import { Header } from "../components/Header/Header"

interface Props {
  title: string
  description: string
}

const BASE_URL = import.meta.env.PUBLIC_BASE_URL

const { description, title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@juanmancedoweb">
    <meta name="twitter:title" content="Porfolio de Juan María Mancedo - Desarrollador y Programador Web Junior">
    <meta name="twitter:description" content="Contrata a Juan María Mancedo para crear tu aplicación web. Desarrollador Web junior. Especializado en crear páginas webs únicas..">
    <meta name="twitter:image" content={`https://${BASE_URL}/banner.png`}>
    <meta name="twitter:image:alt" content="Imagen de teclado rgb">


    <meta property="og:title" content="Porfolio de Juan María Mancedo - Desarrollador y Programador Web Junior" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="Contrata a Juan María Mancedo para crear tu aplicación web. Desarrollador Web junior. Especializado en crear páginas webs únicas.." />
    <meta property="og:url" content={`https://${BASE_URL}`} />
    <meta property="og:image" content={`https://${BASE_URL}/banner.png`} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="800" />
    <meta property="og:image:height" content="200" />
    <meta property="og:image:alt" content="Imagen de teclado rgb">
    <meta property="og:locale" content="es_AR" />

    <title>{title}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/animationScrool.css" />
  </head>
  <body class="relative text-black dark:text-white overflow-x-hidden">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-neutral-100 dark:bg-neutral-950
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
      dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header client:load />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    color: rgba(17, 17, 17, 0.9);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  @media (prefers-color-scheme: dark) {
    body {
      color: rgba(255, 255, 255, 0.9);
    }
  }
</style>